doctype
html(lang="zh-CN")
    head
        include head

    body
        div#stage.container
            div.row
                include sidebar
                div#main-container.col-sm-9.col-xs-12.main-container.invisible

                    block content
                    div.visible-xs.site-bottom-footer
                        include footer


        script(src= url_for('https://unpkg.zhimg.com/jquery@3.7.0/dist/jquery.min.js'))
        script(src= url_for(theme.cdn + '/js/darkmode.js'))
        script(src= url_for('https://unpkg.zhimg.com/bootstrap@3.3.7/dist/js/bootstrap.min.js'))
        script(src= url_for('https://cdn.staticfile.org/jquery-migrate/3.4.1/jquery-migrate.min.js'))
        script(src= url_for('https://cdn.staticfile.org/jquery.appear/0.4.1/jquery.appear.min.js'))
        script(src= url_for(theme.cdn + '/js/typography.js'))
